@model LoggedOutViewModel

@{
    // set this so the layout rendering sees an anonymous user
    ViewData["signed-out"] = true;
}
<div class="page-header bgImageHome">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
                <div class="card card-login card-hidden">
                    <div class="card-header card-header-primary text-center">
                        <h4 class="card-title">Déconnexion</h4>
                    </div>
                    <div class="card-body text-center">

                        <h5>Vous êtes déconnecté</h5>

                    </div>
                    <div class="card-footer justify-content-center">
                        <div class="form-group">
                            @if (Model.PostLogoutRedirectUri != null)
                            {
                                <a class="btn btn-primary btn-block" href="@Model.PostLogoutRedirectUri">Revenir sur le site principal</a>
                            }
                            else
                            {
                                //Default redirection
                                <a class="btn btn-primary btn-block" href="https://cours.confluences.ch/">Revenir sur le site de télétravail</a>
                            }

                            @if (Model.SignOutIframeUrl != null)
                            {
                                <div hidden="">
                                    <iframe width="0" height="0" class="signout" src="@Model.SignOutIframeUrl"></iframe>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @if (Model.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}
