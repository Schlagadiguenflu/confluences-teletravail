<body data-parallax="true" class="bgImage">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <h4 class="card-title">Inscrire un-e utilisateur-trice</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        @if (ViewData["error"] != null)
                        {
                            <div class="text-danger">
                                <p>@ViewData["error"].ToString();</p>
                            </div>
                        }
                        <div class="row">
                            <div class="col-md-12">
                                <form asp-route="SignUpSend">
                                    <fieldset>
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Prénom (min)" asp-for="Firstname" autocomplete="off">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Nom (maj)" asp-for="LastName" autocomplete="off">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control datetimepicker" placeholder="Date de naissance" asp-for="Birthday" autocomplete="off">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="GenderId"></label><br />
                                            @foreach (Gender gender in ViewData["genders"] as List<Gender>)
                                            {
                                                <input class="radio-inline" type="radio" asp-for="GenderId" value="@gender.GenderId">
                                                <label asp-for="GenderId">@gender.GenderName</label>
                                            }
                                        </div>
                                        <div class="form-group">
                                            <input type="tel" class="form-control" placeholder="Numéro de téléphone" asp-for="PhoneNumber" autocomplete="off">
                                        </div>
                                        <div class="form-group">
                                            <input type="email" class="form-control" placeholder="Email" asp-for="Email" autocomplete="off">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control" placeholder="Mot de passe" asp-for="PasswordHash" autocomplete="off">
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="ConfirmPassword" placeholder="Confirmation de mot de passe" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <input class="form-control" placeholder="Trigramme" asp-for="UserName" autofocus>
                                        </div>
                                        <div class="form-group">
                                            <button class="btn btn-primary btn-block" name="button" value="signup">Enregistrer</button>
                                        </div>
                                        @*<p>Vous avez déjà un compte ? <a class="btn btn-primary btn-block" asp-area="" asp-controller="Account" asp-action="Login">Se connecter</a></p>*@
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</body>

@section Scripts {

    <script>
        $('.datetimepicker').datetimepicker({
            locale: 'fr',
            format: 'DD/MM/yyyy',
            icons: {
                time: "fa fa-clock-o",
                date: "fa fa-calendar",
                up: "fa fa-chevron-up",
                down: "fa fa-chevron-down",
                previous: 'fa fa-chevron-left',
                next: 'fa fa-chevron-right',
                today: 'fa fa-screenshot',
                clear: 'fa fa-trash',
                close: 'fa fa-remove'
            }
        });
    </script>
}