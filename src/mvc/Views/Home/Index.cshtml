                                <a href="#pablo">
                                    <img class="img" src="@(ViewData["URLAPI"] + teacher.PathImage)">
                                </a>
                            </div>
                            <div class="card-body m-0">
                                <h4 class="card-title">@teacher.Firstname @teacher.LastName</h4>
                                @if (teacher.Firstname == "Jean-Marc")
