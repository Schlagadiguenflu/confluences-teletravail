@model mvc.Models.HomeworkStudent

@{
    ViewData["Title"] = "Créer un devoir pour un-e participant-e";
}

<h1>Create</h1>

<h4>HomeworkStudent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HomeworkStudentDate" class="control-label"></label>
                <input asp-for="HomeworkStudentDate" class="form-control" />
                <span asp-validation-for="HomeworkStudentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeworkFile" class="control-label"></label>
                <input asp-for="HomeworkFile" class="form-control" />
                <span asp-validation-for="HomeworkFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeworkId" class="control-label"></label>
                <select asp-for="HomeworkId" class ="form-control" asp-items="ViewBag.HomeworkId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

