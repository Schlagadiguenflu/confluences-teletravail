@model mvc.Models.SessionTeacher

@{
    ViewData["Title"] = "Supprimer";
}

<br />
<br />
<br />
<br />
<body data-parallax="true" class="bgImage">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <h4 class="card-title">@ViewData["Title"]</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <h4>SessionTeacher</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Session)
                            </dt>
                            <dd class="col-sm-10">
                                @Model.Session.DateStart @Model.Session.DateEnd
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Teacher)
                            </dt>
                            <dd class="col-sm-10">
                                @Model.Teacher.Firstname @Model.Teacher.LastName
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Order)
                            </dt>
                            <dd class="col-sm-10">
                                @Model.Order
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="SessionId" />
                            <input type="hidden" asp-for="TeacherId" />
                            <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                            <a asp-action="Index">Back to List</a> |
                            <a asp-controller="SchoolClassRooms" asp-action="Details" asp-route-id="@Model.Session.SchoolClassRoomId">Retourner à la classe</a>
                        </form>
                    </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</body>