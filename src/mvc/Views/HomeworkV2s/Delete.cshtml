@model mvc.Models.HomeworkV2s

@{
    ViewData["Title"] = "Supprimer";
}

<br />
<br />
<br />
<br />
<body data-parallax="true" class="bgImage">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <h4 class="card-title">@ViewData["Title"]</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <h3>Êtes-vous sur de vouloir supprimer ce devoir ?</h3>

                        <div>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.HomeworkV2date)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.HomeworkV2date)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.HomeworkV2name)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.HomeworkV2name)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.HomeworkType)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.HomeworkType.HomeworkTypeName)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Session)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Session.SessionId)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Teacher)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Teacher.Firstname)
                                    @Html.DisplayFor(model => model.Teacher.LastName)
                                </dd>
                            </dl>

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="HomeworkV2id" />
                                <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                                <a asp-action="Index">Retourner à la liste des devoirs</a>
                            </form>                          
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</body>

