@model IEnumerable<mvc.Models.AnnouncePage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Créer une nouvelle annonce</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AnnouncePageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActivated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnnouncePageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActivated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AnnouncePageId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AnnouncePageId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AnnouncePageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
