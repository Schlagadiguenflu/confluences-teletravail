@model mvc.Models.Homework

@{
    ViewData["Title"] = "Créer un devoir";
}

<br />
<br />
<br />
<br />
<body data-parallax="true" class="bgImage">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <h4 class="card-title">@ViewData["Title"]</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <h4>Devoir</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="HomeworkDate" class="control-label"></label>
                                        <input asp-for="HomeworkDate" type="text" class="form-control datetimepicker" />
                                        <span asp-validation-for="HomeworkDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ClassName" class="control-label"></label>
                                        <input asp-for="ClassName" class="form-control" />
                                        <span asp-validation-for="ClassName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ClassLink" class="control-label"></label>
                                        <input asp-for="ClassLink" class="form-control" />
                                        <span asp-validation-for="ClassLink" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ExerciceName" class="control-label"></label>
                                        <input asp-for="ExerciceName" class="form-control" />
                                        <span asp-validation-for="ExerciceName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ExerciceLink" class="control-label"></label>
                                        <input asp-for="ExerciceLink" class="form-control" />
                                        <span asp-validation-for="ExerciceLink" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="HomeworkTypeId" class="control-label"></label>
                                        <select asp-for="HomeworkTypeId" class="form-control" asp-items="ViewBag.HomeworkTypeId"></select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="SessionId" class="control-label"></label>
                                        <select asp-for="SessionId" class="form-control" asp-items="ViewBag.SessionId"></select>
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" value="true" asp-for="IsHomeworkAdditionnal">
                                            @Html.DisplayNameFor(model => model.IsHomeworkAdditionnal)
                                            <span class="form-check-sign">
                                                <span class="check"></span>
                                            </span>
                                        </label>
                                    </div>
                                    <input type="hidden" asp-for="TeacherId" value="@ViewData["TeacherId"]" />
                                    <div class="form-group">
                                        <input type="submit" value="Créer" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Index">Retourner à la liste des devoirs</a>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</body>

@section Scripts {

    <script>
        $('.datetimepicker').datetimepicker({
            locale: 'fr',
            format: 'yyyy-MM-DD',
            icons: {
                time: "fa fa-clock-o",
                date: "fa fa-calendar",
                up: "fa fa-chevron-up",
                down: "fa fa-chevron-down",
                previous: 'fa fa-chevron-left',
                next: 'fa fa-chevron-right',
                today: 'fa fa-screenshot',
                clear: 'fa fa-trash',
                close: 'fa fa-remove'
            }
        });
    </script>
}