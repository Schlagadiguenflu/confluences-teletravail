@model mvc.Models.Homework

@{
    ViewData["Title"] = "Supprimer";
}

<br />
<br />
<br />
<br />
<body data-parallax="true" class="bgImage">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <h4 class="card-title">@ViewData["Title"]</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <h3>Êtes-vous sur de vouloir supprimer cette donnée ?</h3>
                        <div>
                            <h4>Cours</h4>
                            <hr />
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.HomeworkDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.HomeworkDate)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ClassName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ClassName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ClassLink)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ClassLink)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ExerciceName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ExerciceName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ExerciceLink)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ExerciceLink)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.HomeworkType)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.HomeworkType.HomeworkTypeName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Session)
                            </dt>
                            <dd class="col-sm-10">
                                @Model.Session.SchoolClassRoom.SchoolClassRoomName  @Model.Session.DateStart.ToString("dd MMMM") - @Model.Session.DateEnd.ToString("dd MMMM")
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Teacher)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Teacher.Firstname)
                                @Html.DisplayFor(model => model.Teacher.LastName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.IsHomeworkAdditionnal)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.IsHomeworkAdditionnal)
                            </dd>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="HomeworkId" />
                                <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                                <a asp-action="Index">Retourner à la liste des devoirs</a>
                            </form>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</body>