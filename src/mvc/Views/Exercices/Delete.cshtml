@model mvc.Models.Exercice

@{
    ViewData["Title"] = "Supprimer";
}

<br />
<br />
<br />
<br />
<body data-parallax="true" class="bgImage">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <h4 class="card-title">@ViewData["Title"]</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <h3>Êtes-vous sur de vouloir supprimer cet exercice ?</h3>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ExerciceDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ExerciceDate)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ExerciceName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ExerciceName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ExerciceLink)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ExerciceLink)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.IsHomeworkAdditionnal)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.IsHomeworkAdditionnal)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Teacher)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Teacher.Id)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Theory)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Theory.TeacherId)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ExerciceId" />
                            <input type="submit" value="Supprimer l'exercice" class="btn btn-danger" /> |
                            <a href="javascript:history.back()">Revenir à la page précédente</a>
                        </form>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</body>