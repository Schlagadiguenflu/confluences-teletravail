@model mvc.Models.SchoolClassRoom

@{
    ViewData["Title"] = "Supprimer";
}

<br />
<br />
<br />
<br />
<body data-parallax="true" class="bgImage">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <h4 class="card-title">@ViewData["Title"]</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <h3>Êtes-vous sur de vouloir supprimer cette classe ?</h3>
                        <h3 class="text-danger">ATTENTION !!! Supprime les ressources associées à la classe également</h3>
                        <h3 class="text-warning">Pour archiver, il faut aller sur la classe et cliquer "Archiver la classe"</h3>
                        <div>
                            <h4>Classe</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.SchoolClassRoomName)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.SchoolClassRoomName)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.ExplanationVideoLink)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ExplanationVideoLink)
                                </dd>
                            </dl>

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="SchoolClassRoomId" />
                                <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                                <a asp-action="Index">Retourner à la liste</a>
                            </form>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</body>